<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://github.com/niklasvh/html2canvas/releases/download/v1.4.1/html2canvas.min.js"></script>
</head>
<body>
<div id="to-image">
    <div id="chartContainer" style="height: 370px; width: 100%;"></div>
    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <button class="btn btn-primary" id="exportChart">Export Chart</button>
    </div>
</div>
<script type="text/javascript">
    window.onload = function() {

        var dps = [];

        var yValue;
        var label = "";

        {{#dataPointsList}}
        yValue = {{y}};
        label = "{{label}}";
        dps.push({label : label, y : yValue});

        {{/dataPointsList}}


        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            exportEnabled: true,
            title: {
                text: "Number of announcements with specific property type"
            },
            axisY:{
                includeZero: true
            },
            data: [{
                type: "column", //change type to bar, line, area, pie, etc
                dataPoints: dps
            }]
        });

        chart.render();

    }
</script>
<script src="/canvas/static/save-to-image.js" type="application/javascript"></script>
</body>
</html>